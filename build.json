{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "javac: build com.generics.exercises",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d",
        "${workspaceFolder}/bin",
        "${workspaceFolder}/src/main/java/com/generics/exercises/*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": [
        "$javac"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}